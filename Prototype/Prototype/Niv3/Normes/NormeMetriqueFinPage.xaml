<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prototype.Niv3.Normes.NormeMetriqueFinPage">
    <ContentPage.Content>
        <Grid>
            <Image Source="http://handwerk-outillage.fr/wp-content/uploads/2019/01/Voiture_lmdt_app.png"
                   Aspect="Fill" />
            <ScrollView>
                <StackLayout>
                    <Grid HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    HeightRequest="25"
                    BackgroundColor="WhiteSmoke"
                    Opacity="0.75">
                        <Label Text="Metrique Fin / MF"
                    TextColor="Black"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="Default" />
                    </Grid>

                    <Button Text="Diamètre"
                    TextColor="Black"
                    BackgroundColor="SaddleBrown"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="150" 
                    FontSize="Default"
                    BorderColor="Black"
                    BorderRadius="7"
                    BorderWidth="1" />

                    <Button Text="Pas"
                    TextColor="Black"
                    BackgroundColor="SaddleBrown"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="150"
                    FontSize="Default"
                    BorderColor="Black"
                    BorderRadius="7"
                    BorderWidth="1" />

                    <Button Text="Foret"
                    TextColor="Black"
                    BackgroundColor="SaddleBrown"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="150"
                    FontSize="Default"
                    BorderColor="Black"
                    BorderRadius="7"
                    BorderWidth="1" />

                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>