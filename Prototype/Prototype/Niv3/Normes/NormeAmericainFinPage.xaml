                        <Button x:Name="BoutonChoixPas1pouce38"   IsVisible="False" Text="12" TextColor="Black" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="14"  Grid.Column="0" Clicked="BoutonValeurPas_Clicked"/>
                        <Button x:Name="BoutonChoixPas1pouce12"   IsVisible="False" Text="12" TextColor="Black" HorizontalOptions="Fill" VerticalOptions="Fill" Grid.Row="15"  Grid.Column="0" Clicked="BoutonValeurPas_Clicked"/>
